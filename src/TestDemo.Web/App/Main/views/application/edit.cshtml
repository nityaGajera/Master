<form id="frm_edit_application" name="applicationEditForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@("Edit Application")</span>
        </h4>
    </div>
    <div class="modal-body">
        @*<span>sensor Module</span>*@
        <uib-tabset class="tab-container tabbable-line">
            @*<uib-tab heading="Applictions Details">*@
                @*<div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">*@
                            <div class="form-line">
                                <label for="name" class="form-label">@("Title")</label>
                                @*<div class="form-line">*@
                                <input id="title" type="text" name="name" ng-model="vm.application.title" required maxlength="32" minlength="2" class="validate form-control">
                            </div>
                        </div>
                </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()">
            @("Save")
        </button>
    </div>

</form>